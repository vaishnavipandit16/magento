<strong>Product Type</strong>
<select id="producttype" onclick="selectChangeEvent();">
    <option value="simple">Simple</option>
    <option value="bundle">Bundle</option>
</select>

<a href="" id="continue_button" class="button">Continue</a>

<script type="text/javascript">
var productTemplateSyntax = /(^|.|\r|\n)({{(\w+)}})/;

function setSettings(urlTemplate, setElement) {
    var template = new Template(urlTemplate, productTemplateSyntax);
    setLocation(template.evaluate({
        attribute_set: $F(setElement)
    }));
}

function selectChangeEvent() {
    var attributesetid = document.getElementById('attributesetid').value;
    var producttype = document.getElementById('producttype').value;
    document.getElementById('continue_button').href = "set/" + attributesetid + '/type/' + producttype;

}
</script>

<style>
select {
    width: 100%;
}

a {
    margin-top: 25px;
}
</style>