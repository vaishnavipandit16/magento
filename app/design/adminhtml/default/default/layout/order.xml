<?xml version="1.0"?>
<layout>
    <order_adminhtml_order_index>
        <reference name="content">
            <block type="order/adminhtml_order" name="order_grid" />
        </reference>
    </order_adminhtml_order_index>
    <order_adminhtml_order_cart_index>
        <reference name="head">
            <action method="addJs">
                <script>ccc/jquery-3.6.0.js</script>
            </action>
            <action method="addJs">
                <script>ccc/after_jquery.js</script>
            </action>
            <action method="addJs">
                <script>ccc/mage.js</script>
            </action>
        </reference>
        <reference name="content">
            <block type="order/adminhtml_order_cart_main" name="main">
                <block type="order/adminhtml_order_cart_main_account" name="account" />
                <block type="order/adminhtml_order_cart_main_product" name="product" template="order/cart/main/product.phtml">
                    <block type="order/adminhtml_order_cart_main_product_grid" name="product_grid" />
                </block>
                <block type="order/adminhtml_order_cart_main_cartitems" name="cartitems" />
                <block type="order/adminhtml_order_cart_main_billingaddress" name="billingaddress" />
                <block type="order/adminhtml_order_cart_main_shippingaddress" name="shippingaddress" />
                <block type="order/adminhtml_order_cart_main_payment" name="payment" />
                <block type="order/adminhtml_order_cart_main_shipping" name="shipping" />
                <block type="order/adminhtml_order_cart_main_total" name="total" />
            </block>
        </reference>
    </order_adminhtml_order_cart_index>

    <order_adminhtml_order_cart_showcustomer>
        <reference name="content">
            <block type="order/adminhtml_order_customer" name="customer_grid" />
        </reference>
    </order_adminhtml_order_cart_showcustomer>

    <order_adminhtml_order_view>
        <reference name="head">
            <action method="addJs">
                <script>ccc/jquery-3.6.0.js</script>
            </action>
            <action method="addJs">
                <script>ccc/after_jquery.js</script>
            </action>
            <action method="addJs">
                <script>ccc/mage.js</script>
            </action>
        </reference>
        <reference name="content">
            <block type="order/adminhtml_order_invoice" name="invoice">
                <block type="order/adminhtml_order_invoice_account" name="account_invoice" />
                <!-- <block type="order/adminhtml_order_cart_main_product" name="product" template="order/cart/main/product.phtml">
                    <block type="order/adminhtml_order_cart_main_product_grid" name="product_grid" />
                </block>-->
                <block type="order/adminhtml_order_invoice_orderitems" name="orderitems_invoice" />
                <block type="order/adminhtml_order_invoice_billingaddress" name="billingaddress_invoice" />
                <block type="order/adminhtml_order_invoice_shippingaddress" name="shippingaddress_invoice" />
                <block type="order/adminhtml_order_invoice_payment" name="payment_invoice" />
                <block type="order/adminhtml_order_invoice_shipping" name="shipping_invoice" />
                <block type="order/adminhtml_order_invoice_total" name="total_invoice" />

            </block>
        </reference>
    </order_adminhtml_order_view>

    <order_adminhtml_order_cart_new>
        <reference name="content">
            <block type="order/adminhtml_order_customer_form" name="add_customer" />
        </reference>
    </order_adminhtml_order_cart_new>

</layout>